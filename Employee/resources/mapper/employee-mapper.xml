<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="employeeMapper">


	<select id="selectAll" 
			resultType="empVO"
			parameterType="empVO">
			
			SELECT 
			   	   EMP_ID empId
	 		 	 , EMP_NAME empName
	 		 	 , EMP_NO empNo
	 		 	 , JOB_CODE jobCode
	 		 	 , SAL_LEVEL salLevel
		  	  FROM 
		  	   	   EMPLOYEE
		  	 ORDER
		 		BY 
		 		   empId DESC
	</select>
	<insert id="insertEmp"
		parameterType="empVo">
		INSERT 
		  INTO 
			   EMPLOYEE
			   (
			   EMP_ID
			 , EMP_NAME
			 , EMP_NO
			 , JOB_CODE
			 , SAL_LEVEL
			   )
			   VALUES
			   (
			   #{empId}
			 , #{empName}
			 , #{empNo}
			 , #{jobCode}
			 , #{salLevel}
			   )
	</insert>

